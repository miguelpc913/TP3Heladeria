<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    tools:context=".RepartidorActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola repartidor"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/repartidorStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:text="Actualmente no tienes pedidos"
        android:textSize="22dp"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/conoMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text=""
            android:layout_weight="1"
            android:textFontWeight="900"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/conoCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="2"
            android:textAlignment="textEnd"
            android:textFontWeight="900"
            android:textSize="30dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/vasoMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text=""
            android:layout_weight="1"
            android:textFontWeight="900"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/vasoCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="textEnd"
            android:layout_weight="2"
            android:textFontWeight="900"
            android:textSize="30dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/poteMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:text=""
            android:textFontWeight="900"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/poteCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="2"
            android:textAlignment="textEnd"
            android:textFontWeight="900"
            android:textSize="30dp"></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/repartidorEntregarOrden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:text="Orden Entregada"
        android:layout_margin="20sp"
        android:backgroundTint="@color/teal_200"></Button>

</LinearLayout>